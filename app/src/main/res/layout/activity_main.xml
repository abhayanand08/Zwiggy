<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themecolor"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160sp"
        android:background="@drawable/lyt_round_white"
        android:orientation="vertical"
        android:paddingStart="15sp"
        android:paddingEnd="15sp">

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="145sp"
            android:text="OTP Verification"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/para"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:text="We will send an otp to your entered mobile number"
            android:textAlignment="center"
            android:textColor="@color/textcolor2"
            android:textSize="14sp"
            android:textStyle="bold" />

        <com.hbb20.CountryCodePicker
            android:id="@+id/ccp"
            android:layout_width="220dp"
            android:layout_height="50sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            app:ccp_areaCodeDetectedCountry="true"
            app:ccp_autoDetectCountry="true"
            app:ccp_showFullName="false"
            app:ccp_showNameCode="false"
            app:ccp_showPhoneCode="true" />

        <EditText
            android:id="@+id/mgetphonenumber"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/edittxtmain"
            android:focusableInTouchMode="true"
            android:hint="Enter Your Number"
            android:inputType="phone"
            android:padding="12sp"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/send_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_round"
            android:elevation="5sp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Send OTP"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:id="@+id/loading"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/themecolor"/>

        </FrameLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/plate_logo"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90sp"
        android:background="@drawable/food4"
        android:contentDescription="@string/app_name"
        android:transitionName="slider_anim" />

</RelativeLayout>